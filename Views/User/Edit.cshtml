@model ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}

<h4 class="display-4 mb-4 text-center">Edit User</h4>
<hr />

<div class="container">
    <div class="row mb-4">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <div class="form-group mb-2">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group mb-4">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <!-- Other fields as needed -->
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-warning float-end" asp-action="Index">
                    <svg style="vertical-align: text-bottom" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                    </svg>  Cancel
                </a>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

